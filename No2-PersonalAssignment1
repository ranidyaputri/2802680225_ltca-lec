import java.util.Scanner;

//class untuk menyimpan data barang
class Barang {
    String nama;
    int jumlahStok;
    double harga;

    // konstruktor
    public Barang(String nama, int jumlahStok, double harga) {
        this.nama = nama;
        this.jumlahStok = jumlahStok;
        this.harga = harga;
    }

    // method getter
    public String getNama() {
        return nama;
    }
    public int getJumlahStok() {
        return jumlahStok;
    }
    public double getHarga() {
        return harga;
    }

    // method setter
    public void setNama(String nama) {
        this.nama = nama;
    }
    public void setJumlahStok(int jumlahStok) {
        if(jumlahStok >= 0){
            this.jumlahStok = jumlahStok;
        }else{
            System.out.println("Jumlah stok tidak boleh kurang dari 0.");
        }
    }
    public void setHarga(double harga) {
        if(harga >= 0){
            this.harga = harga;
        }else{
            System.out.println("Harga tidak boleh kurang dari 0.");
        }
    }
    
    // method menampilkan data barang
    public void tampilkanData(){
        System.out.println("Nama: " + nama + ", Jumlah Stok: " + jumlahStok + ", Harga: " + harga);
    }

    // method update jumlah stok
    public void updateStok(String nama, int jumlahBaru){
        if(this.nama.equalsIgnoreCase(nama)){
            setJumlahStok(jumlahBaru);
        }
    }

    // method cari nama barang
    public void cariBarang(String nama){
        if(this.nama.equalsIgnoreCase(nama)){
            System.out.println("\nHasil pencarian:");
            tampilkanData();
        }
    }
}

//main class
public class Inventaris {
    public static void main(String[] args) {
        //deklarasi array untuk menyimpan daftar data barang
        Barang inventaris[] = new Barang[10];

        // menambahkan 3 data barang
        inventaris[0] = new Barang("Pensil", 50, 200);
        inventaris[1] = new Barang("Buku", 30, 15000);
        inventaris[2] = new Barang("Penghapus", 20, 500);

        // menampilkan daftar data barang
        System.out.println("Toko Inventaris:");
        for(int i = 0; i < inventaris.length; i++){
            if(inventaris[i] != null){
                System.out.print(i+1 + ". ");
                inventaris[i].tampilkanData();
            }
        }

        // deklarasi scanner
        Scanner scanner = new Scanner(System.in);

        // input nama dan stok baru
        System.out.print("\nMasukkan nama barang yang ingin diupdate: ");
        String namaParams = scanner.nextLine();

        System.out.print("Masukkan jumlah stok baru: ");
        int jumlahBaru = scanner.nextInt();
        scanner.nextLine();

        // melakukan update stok
        for(int i = 0; i < inventaris.length; i++){
            if(inventaris[i] != null && inventaris[i].getNama().equalsIgnoreCase(namaParams)){
                inventaris[i].updateStok(namaParams, jumlahBaru);
            }
        }

        // menampilkan daftar data barang terupdate
        System.out.println("\nInventaris setelah diupdate:");
        for(int i = 0; i < inventaris.length; i++){
            if(inventaris[i] != null){
                System.out.print(i+1 + ". ");
                inventaris[i].tampilkanData();
            }
        }

        // input pencarian nama
        System.out.print("\nMasukkan nama barang yang dicari: ");
        String namaCari = scanner.nextLine();

        // melakukan pencarian nama
        for(int i = 0; i < inventaris.length; i++){
            if(inventaris[i] != null){
                inventaris[i].cariBarang(namaCari);
            }
        }

        scanner.close();
    }
}
